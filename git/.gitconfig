[user]
	name = AurÃ©lien Bottazini
	email = aurelien@bottazini.com
[core]
	quotepath = false
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
[push]
	default = current
[alias]
        a = add -p
        s = status
        cm = !git-cm
        d = diff -w
        dw = diff --word-diff --color-words
        co = checkout
        b = branch
	set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
        ignore-tracked = update-index --assume-unchanged
	gtags = !.git/hooks/gtags
	glog = log -E -i --grep
        bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
        new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	sla = log --oneline --decorate --graph --all
	car = commit --amend --no-edit
        caa = commit -a --amend -C HEAD
	unstage = reset
	uncommit = reset --soft HEAD^
        pop = reset --soft HEAD^
        ignore = "!f() { echo \"$1\" >> .gitignore; }; f"
        abortmerge= git reset --hard HEAD
	mup = !git checkout master && git pull && git checkout - && git merge master
	sup = !git checkout staging && git pull && git checkout -
	ureset = !git upstream && git reset --hard (git upstream)
        browse = !hub browse
        compare = !hub compare
        issues = !hub browse -- issues
        pr = !hub pull-request
        ci = !hub ci-status
        upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
        fall = !git-fetch-all-remote
        rm-from-history = !git-remove-from-history
        find-commits-for-file = log --all --
        po = !git push --set-upstream origin (git rev-parse --abbrev-ref HEAD)
	praise = blame
        leaderboard = shortlog -sn --all --no-merges
        recent-branches = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
        recap = log --all --oneline --no-merges --author=aurelien@bottazini.com
        standup = log --since yesterday --all --no-merges --oneline --author $(git config user.email) --pretty=short
        scrum = log --since yesterday --all --no-merges --oneline --author $(git config user.email) --pretty=short
        # A more concise and readable git log
        ls = log --pretty=format:"%C(yellow)%h\\ %Creset%s%Cblue\\ [%cn]\\%Cred%d" --decorate
        # Same as above, with files changed in each commit
        ll = ls --numstat
        # show the history difference between a local branche and its remote
        divergence = log --left-right --graph --cherry-pick --oneline $1...origin/$1

	templatedir = ~/.git_template
[merge]
#        ff = only
[fetch]
        prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[magit]
	hideCampaign = true
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[github]
	user = aurelienbottazini

[mergetool]
	keepBackup = false
