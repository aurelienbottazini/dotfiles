alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias l.='ls -d .*'
alias tmux='tmux -u -f "$XDG_CONFIG_HOME"/tmux/tmux.conf'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'

alias toast='powershell.exe -command New-BurntToastNotification'

alias cljr='clojure -Sdeps "{:deps {com.bhauman/rebel-readline {:mvn/version \"0.1.4\"}}}" -m rebel-readline.main'

alias v.="(cd dotfiles &&  vim .)"

alias g="git-status"

# You will need for 24 bits emacs:
# tic -x -o ~/.terminfo ~/dotfiles/emacs/.emacs.d/terminfo-24bit.src
function ee() {
  # wrap in a function, otherwise it shows an error message on start when not in tmux
  TERM=xterm-24bit emacsclient -s $(tmux display-message -p '#S') -ta ''
}

alias ee="TERM=xterm-24bit emacs -nw"
alias emg="emacs . >/dev/null 0>&2 &; disown $1"
alias idea="/opt/idea/bin/idea.sh"

alias whatismyip="dig +short myip.opendns.com @resolver1.opendns.com"
