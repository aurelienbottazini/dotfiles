Config { font = "xft:Gotham HTF Black:size=12:antialias=true"
        , additionalFonts = ["xft:Noto Emoji:size=10"]
        , borderColor = "#97d88a"
        , border = TopB
        , bgColor = "#97d88a"
        , fgColor = "black"
        , position = TopW L 100 
        , commands = [ 
	Run Wireless "wlx00c0ca967db2" ["-t","<essid>" ] 10
	, Run Cpu ["-L","3","-H","50","--normal","#3a499c","--high","#bc3e44"] 10
	, Run Memory ["-t","Mem: <usedratio>%"] 10
	, Run Date "%a %b %_d" "date" 10
	, Run Com "date" ["+%H:%M"] "localtime" 10
	, Run Com "./dotfiles/bin/sanFranciscoTime.sh" [] "sftime" 10
	, Run Com "./dotfiles/bin/getVolume.sh" [] "myvolume" 10
	, Run Com "./dotfiles/bin/dropboxStatus.sh" [] "mydropbox" 10
	, Run StdinReader
	]
	, sepChar = "%"
	, alignSep = "}{"
	, template = " %StdinReader% | %cpu% | %memory% }{ <fn=1>📁</fn>%mydropbox%  <fn=1>🔉</fn>%myvolume%  <fn=1>📡</fn>%wlx00c0ca967db2wi%  <fn=1>📅</fn><action=firefox --new-window https://www.fastmail.com/calendar/>%date%</action> <fn=1>🌍</fn>%localtime% <fn=1>🌎</fn>%sftime% "
}
