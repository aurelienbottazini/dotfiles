Config { font = "xft:Operator Mono:size=12:antialias=true"
        , additionalFonts = ["xft:PragmataPro Liga:size=10"]
        , borderColor = "#939598"
        , border = BottomB
        , borderWidth = 3
        , bgColor = "#dad9d6"
        , fgColor = "black"
        , position = TopW L 100
        , commands = [
          Run Date "%a %b %_d" "theDate" 10
          , Run Com "date" ["+%H:%M"] "localtime" 10
          , Run Com "./bin/sanFranciscoTime.sh" [] "sftime" 10
          , Run Com "./bin/dropboxStatus.sh" [] "mydropbox" 10
          , Run Com "./bin/volume-status.sh" [] "myvolume" 10
          , Run StdinReader
          ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% }{ <fn=1><action=`pavucontrol`>S</action></fn> %localtime% %sftime% "
}
