Config { font = "xft:Operator Mono:size=10:antialias=true"
        , additionalFonts = ["xft:PragmataPro Liga:size=8"]
        , borderColor = "#939598"
        , border = BottomB
        , borderWidth = 3
        , bgColor = "#dad9d6"
        , fgColor = "black"
        , position = TopW L 100
        , commands = [
          Run Date "%a %b %_d" "theDate" 10
          , Run Com "date" ["+%H:%M"] "localtime" 10
          , Run Com "./bin/sanFranciscoTime.sh" [] "sftime" 10
          , Run Com "./bin/dropboxStatus.sh" [] "mydropbox" 10
          , Run Com "./bin/volume-status.sh" [] "myvolume" 10
          , Run StdinReader
          ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% }{ <action=`nautilus ~/Dropbox`><fn=1></fn>%mydropbox%</action> <action=blueman-manager><fn=1></fn></action> <action=launch-settings.sh sound><fn=1></fn> %myvolume%</action> <fn=1></fn> <action=gsimplecal>%theDate%</action> <fn=1>⌚</fn> %localtime% <fn=1>⌚</fn> %sftime%"
}
