Config { font = "xft:Gotham HTF Black:size=12:antialias=true"
        , additionalFonts = ["xft:PragmataPro Liga:size=12"]
        , borderColor = "#939598"
        , border = BottomB
        , borderWidth = 3
        , bgColor = "#dad9d6"
        , fgColor = "black"
        , position = TopW L 100
        , commands = [
          Run Date "%a %b %_d" "theDate" 10
          , Run Com "date" ["+%H:%M"] "localtime" 10
          , Run Com "./bin/sanFranciscoTime.sh" [] "sftime" 10
          , Run Com "./bin/getVolume.sh" [] "myvolume" 10
          , Run Com "./bin/dropboxStatus.sh" [] "mydropbox" 10
          , Run StdinReader
          ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% }{ <action=st alsamixer><fn=1></fn> %myvolume%</action> <fn=1></fn> <action=firefox --new-window https://www.fastmail.com/calendar/>%theDate%</action> <action=firefox --new-window https://www.worldtimebuddy.com><fn=1>t:</fn>%localtime% <fn=1>t:</fn>%sftime%</action> "
}
